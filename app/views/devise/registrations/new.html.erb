<div class='devise-container devise-edit-user'>
  <h2>Registrate</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, 'Nombre' %>
      <%= f.text_field :name, autocomplete: 'name', required: true, placeholder: 'Nombre' %>
    </div>

    <div class="field">
      <%= f.label :phone, 'Celular' %>
      <%= f.telephone_field :phone, autocomplete: 'phone', required: true %>
    </div>

    <div class="field">
      <%= f.label :birthdate, 'Fecha de nacimiento' %>
      <%= f.date_select :birthdate, autocomplete: 'birthdate', required: true %>
    </div>
    
    <div class="field">
      <%= f.label :email, 'Correo' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    </div>

    <div class="field">
      <%= f.label :password, 'ContraseÃ±a'%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimos)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Confirma tu contraseÃ±a' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>

    <div class="actions">
      <%= f.submit 'Registrarse' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
