<div class='devise-container devise-edit-user'>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2>Editar <%= resource_name.to_s.humanize %></h2>

    <div class="field">
      <%= f.label :name, 'Nombre' %>
      <%= f.text_field :name, autocomplete: 'name' %>
    </div>

    <div class="field">
      <%= f.label :phone, 'Celular' %>
      <%= f.telephone_field :phone, autocomplete: 'phone' %>
    </div>

    <div class="field select-field">
      <%= f.label :birthdate, 'Fecha de nacimiento' %>
      <%= f.date_field :birthdate, autocomplete: 'birthdate' %>
    </div>

    <div class="field">
      <%= f.label :email, 'Correo' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, 'Contraseña' %> <i>(Deja en blanco si no deseas cambiar tu contraseña)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> caracteres minimos</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Confirma tu contraseña' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, 'Contraseña actual' %> <i>(Ingresa tu contraseña para confirmar tus cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit 'Actualizar' %>
    </div>
  <% end %>

  <h3>Cancelar mi cuenta</h3>

  <p>¿No te gusta TechClic? <%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "¿Estas seguro?" }, class:'btn-devise', method: :delete %></p>

  <%= link_to "Regresar", :back %>
</div>
